#include <stdio.h>
#include <string.h>

// Struktur data akun
struct Account {
    int accountNumber;
    char statusCode[10]; // "valid" atau "invalid"
};

int main() {
    // Simulasi data akun
    struct Account accounts[] = {
        {1001, "valid"},
        {1002, "invalid"},
        {1003, "valid"}
    };
    int n = 3; // jumlah akun

    int inputAcc;
    double serviceCost = 250000; // biaya servis
    int found = 0; // 0 = false, 1 = true
    char status[10];

    printf("=== Program Servis Komputer ===\n");
    printf("Masukkan Account Number: ");
    scanf("%d", &inputAcc);

    // Cari akun
    for (int i = 0; i < n; i++) {
        if (accounts[i].accountNumber == inputAcc) {
            found = 1;
            strcpy(status, accounts[i].statusCode);
            break;
        }
    }

    // 3 Branch Condition
    if (found && strcmp(status, "valid") == 0) {
        // Branch 1: Precondition 1 terpenuhi
        printf("\n=== INVOICE ===\n");
        printf("Account Number : %d\n", inputAcc);
        printf("Biaya Servis   : Rp %.2f\n", serviceCost);
        printf("================\n");
    } 
    else if (found && strcmp(status, "valid") != 0) {
        // Branch 2: Account ditemukan tapi status invalid
        printf("\nError: Account ditemukan tetapi status tidak valid!\n");
    } 
    else {
        // Branch 3: Account tidak ditemukan
        printf("\nError: Account number tidak ditemukan!\n");
    }

    return 0;
}
